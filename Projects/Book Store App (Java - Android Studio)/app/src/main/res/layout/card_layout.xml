<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/purple_200"
    card_view:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/card_book_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Book ID"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/card_title_id"
            card_view:layout_constraintEnd_toStartOf="@+id/card_isbn_id"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/card_title_id" />

        <TextView
            android:id="@+id/card_title_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/card_book_id"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/card_desc_id" />

        <TextView
            android:id="@+id/card_isbn_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ISBN"
            android:textSize="13dp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/card_book_id"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/card_book_id" />

        <TextView
            android:id="@+id/card_author_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/card_price_id"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/card_price_id" />

        <TextView
            android:id="@+id/card_desc_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toTopOf="@+id/card_title_id"
            card_view:layout_constraintEnd_toStartOf="@+id/card_price_id"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_price_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="13sp"
            android:textStyle="bold"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/card_desc_id"
            card_view:layout_constraintEnd_toStartOf="@+id/card_author_id"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/card_desc_id" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

